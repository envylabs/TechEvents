<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :original_address %><br />
    <%= f.text_field :original_address %>
  </div>
  <% if !@event.address.blank? %>
    <div>
      <p><strong>The current address is:</strong> <%= @event.address %></p>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :notes, "Notes for arriving guests (like the floor or room number of the event)" %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :newsletter %><br />
    <%= f.check_box :newsletter %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
