<h1>Listing events</h1>

<hr>

<% @events.each do |event| %>
    <h2><%= event.name %></h2>
    <h3><%= l(event.start_time.in_time_zone("EST"), :format => :short) %> to <%= l(event.end_time.in_time_zone("EST"), :format => :short) %></h3>
    <p><%= event.description %></p>
    <p><em><%= event.human_address %></em></p>
    <h6>Posted by <%= link_to "@#{event.user.handle}", "http://twitter.com/#{event.user.handle}", target: "_blank" %></h6>
    <br />
<% end %>

<br />

<%= link_to 'New Event', new_event_path %>

